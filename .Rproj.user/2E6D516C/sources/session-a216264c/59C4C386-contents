library(factoextra)
data("iris")

# Perform PCA using base R
pca_res <- prcomp(iris[, 1:4], scale. = TRUE)

# Visualize individuals
fviz_pca_ind(
  pca_res,
  geom.ind = "point",
  col.ind  = iris$Species, # color by species
  addEllipses = TRUE,      # confidence ellipses for each group
  legend.title = "Species"
)

fviz_pca_var(
  pca_res,
  col.var = "contrib",  # Colorazione basata sul contributo
  gradient.cols = c("#00AFBB", "#E7B800", "#FC4E07"),
  repel = TRUE  # Evita sovrapposizioni delle etichette
)